{% extends 'base-admin.html.twig' %}

{% block title %}Administration - Liste des campus{% endblock %}

{% block content %}
    <h3 class="text-uppercase text-secondary">Liste des campus</h3>

    {{ include('campus/_filters.html.twig') }}

    <table class="table">
        <thead>
            <tr>
                <th>Site</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                {{ form_start(form) }}
                <td>
                    {{ form_widget(form.nom) }}
                </td>
                <td>
                    <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
                </td>
                {{ form_end(form) }}
            </tr>
        {% for site in sites %}
            <tr>
                <td class="align-middle">{{ site.nom }}</td>
                <td>
                    <div class="d-flex">
                        <a href="{{ path('campus_edit', {'id': site.id}) }}" class="btn btn-primary mx-1">Modifier</a>
                        {{ include('campus/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
