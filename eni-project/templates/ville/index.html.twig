{% extends 'base.html.twig' %}

{% block title %}Gestion des villes{% endblock %}

{% block body %}
    <h1 class="text-center text-primary">Gestion des villes</h1>

    <div class="my-3">
        <h4 class="text-danger">Filtrer les villes</h4>
        {{ include('ville/_filters.html.twig') }}
    </div>

    <table class="table align-middle">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Code Postal</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                {{ form_start(form) }}
                    <td>
                        {{ form_widget(form.nom) }}
                        {{ form_errors(form.nom) }}
                    </td>
                    <td>
                        {{ form_widget(form.codePostal) }}
                        {{ form_errors(form.codePostal) }}
                    </td>
                    <td>
                        <button class="btn btn-primary me-1">{{ button_label|default('Enregistrer') }}</button>
                    </td>
                {{ form_end(form) }}
            </tr>
        {% for ville in villes %}
            <tr>
                <td>{{ ville.nom }}</td>
                <td>{{ ville.codePostal }}</td>
                <td>
                    <div class="d-flex">
                        <a href="{{ path('ville_edit', {'id': ville.id}) }}" class="btn btn-primary me-1">Modifier</a>
                        {{ include('ville/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas de données trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
