{% extends 'base.html.twig' %}

{% block title %}Gestion des campus{% endblock %}

{% block body %}
    <h1 class="text-center text-primary">Gestion des campus</h1>

    <div class="my-3">
        <h4 class="text-danger">Filtrer les sites</h4>
        {{ include('campus/_filters.html.twig') }}
    </div>

    <table class="table align-middle">
        <thead>
            <tr>
                <th>Site</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                {{ form_start(form) }}
                <td>
                    {{ form_widget(form.nom) }}
                    {{ form_errors(form.nom) }}
                </td>
                <td>
                    <button class="btn btn-primary me-1">{{ button_label|default('Enregistrer') }}</button>
                </td>
                {{ form_end(form) }}
            </tr>
            {% for site in sites %}
                <tr>
                    <td>{{ site.nom }}</td>
                    <td>
                        <div class="d-flex">
                            <a href="{{ path('campus_edit', {'id': site.id}) }}" class="btn btn-primary me-1">Modifier</a>
                            {{ include('campus/_delete_form.html.twig') }}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">Pas de données trouvées</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
