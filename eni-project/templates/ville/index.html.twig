{% extends 'base-admin.html.twig' %}

{% block title %}Administration - Liste des villes{% endblock %}

{% block content %}
    <h3 class="text-uppercase text-secondary mb-5">Liste des villes</h3>
    <a href="{{ path('ville_new') }}" class="btn btn-primary">Nouvelle ville</a>

    <table class="table text-center mt-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Code Postal</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ville in villes %}
            <tr>
                <td>{{ ville.id }}</td>
                <td>{{ ville.nom }}</td>
                <td>{{ ville.codePostal }}</td>
                <td>
                    <div class="d-flex">
                        <div class="flex-fill">
                            <a href="{{ path('ville_edit', {'id': ville.id}) }}" class="btn btn-primary">Modifier</a>
                        </div>
                        <div class="flex-fill">
                            {{ include('ville/_delete_form.html.twig') }}

                        </div>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
