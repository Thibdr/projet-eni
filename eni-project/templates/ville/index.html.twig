{% extends 'base-admin.html.twig' %}

{% block title %}Administration - Liste des villes{% endblock %}

{% block content %}
    <h3 class="text-uppercase text-secondary">Liste des villes</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Code Postal</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ville in villes %}
            <tr>
                <td>{{ ville.id }}</td>
                <td>{{ ville.nom }}</td>
                <td>{{ ville.codePostal }}</td>
                <td>
                    <a href="{{ path('ville_show', {'id': ville.id}) }}">show</a>
                    <a href="{{ path('ville_edit', {'id': ville.id}) }}">edit</a>
                    <a href="{{ path('ville_delete', {'id': ville.id}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ville_new') }}" class="btn btn-primary">Nouveau ville</a>
{% endblock %}
