{% extends 'base.html.twig' %}

{% block title %}Gestion des villes{% endblock %}

{% block body %}
    <h3 class="my-3">Gestion des villes</h3>

    {{ include('ville/_filters.html.twig') }}

    {{ form_start(form) }}
        <div class="row align-items-center">
            <div class="offset-2 col-5">
                Ajouter une nouvelle ville :
            </div>
        </div>
        <div class="row align-items-center">
            <div class="offset-2 col-2">
                        {{ form_label(form.nom, 'Nom :') }}
                        {{ form_widget(form.nom) }}
                        {{ form_errors(form.nom) }}
            </div>
            <div class="col-2">
                        {{ form_label(form.codePostal, 'Code postal :') }}
                        {{ form_widget(form.codePostal) }}
                        {{ form_errors(form.codePostal) }}
            </div>
            <div class="offset-2 col-4">
                <div class="mt-3">
                        <button class="btn btn-warning me-1">{{ button_label|default('Enregistrer') }}</button>
                </div>
            </div>
        </div>
    {{ form_end(form) }}

    <div class="mx-3">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th class="col">Nom</th>
                    <th class="col">Code Postal</th>
                    <th class="col-3">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for ville in villes %}
                <tr>
                    <td>{{ ville.nom }}</td>
                    <td>{{ ville.codePostal }}</td>
                    <td>
                        <div class="d-flex">
                            <a href="{{ path('ville_edit', {'id': ville.id}) }}" class="btn btn-warning me-1">Modifier</a>
                            {{ include('ville/_delete_form.html.twig') }}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Pas de données trouvées</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
