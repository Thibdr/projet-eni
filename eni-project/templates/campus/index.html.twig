{% extends 'base.html.twig' %}

{% block title %}Gestion des campus{% endblock %}

{% block body %}
    <h3 class="my-3">Gestion des campus</h3>

    {{ include('campus/_filters.html.twig') }}

    {{ form_start(form) }}
        <div class="row align-items-center">
            <div class="offset-2 col-4">
                    {{ form_label(form.nom, 'Ajouter un nouveau campus :') }}
                    {{ form_widget(form.nom) }}
                    {{ form_errors(form.nom) }}
            </div>
            <div class="offset-2 col-4">
                <div class="mt-3">
                        <button class="btn btn-primary me-1">{{ button_label|default('Enregistrer') }}</button>
                </div>
            </div>
        </div>
    {{ form_end(form) }}

    <div class="mx-3">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th class="col-10">Site</th>
                    <th class="col-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>

                </tr>
                {% for site in sites %}
                    <tr>
                        <td>{{ site.nom }}</td>
                        <td>
                            <div class="d-flex">
                                <a href="{{ path('campus_edit', {'id': site.id}) }}" class="btn btn-primary me-1">Modifier</a>
                                {{ include('campus/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2">Pas de données trouvées</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
