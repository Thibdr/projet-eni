{% extends 'base.html.twig' %}

{% block title %}Gestion des lieux{% endblock %}

{% block body %}
    <h3 class="my-3">Gestion des lieux</h3>
    <div class="mx-lg-2">
        <table class="table align-middle mt-3">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Rue</th>
                <th>Ville</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for lieu in lieux %}
                <tr>
                    <td>{{ lieu.id }}</td>
                    <td>{{ lieu.nom }}</td>
                    <td>{{ lieu.rue }}</td>
                    <td>{{ lieu.ville.codePostal }} {{ lieu.ville.nom }}</td>
                    <td>{{ lieu.latitude }}</td>
                    <td>{{ lieu.longitude }}</td>
                    <td>
                        <div class="d-flex">
                            <a href="{{ path('lieu_edit', {'id': lieu.id}) }}" class="btn btn-warning me-1">Modifier</a>
                            {{ include('lieu/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="text-center">
            <a href="{{ path('lieu_new') }}" class="btn btn-warning">Nouveau lieu</a>
        </div>
    </div>
{% endblock %}
