{{ form_start(form) }}
    <div class="row">
        <div class="offset-1 col-5">
            <div class="form-group">
                {{ form_row(form.nom) }}
            </div>
            <div class="form-group">
                {{ form_row(form.dateHeureDebut) }}
            </div>
            <div class="form-group">
                {{ form_row(form.dateLimiteInscription) }}
            </div>
            <div class="form-group">
                {{ form_row(form.nbInscriptionsMax) }}
            </div>
            <div class="form-group">
                {{ form_row(form.duree) }}
            </div>
            <div class="form-group">
                {{ form_row(form.informations) }}
            </div>
        </div>
        <div class="col-5">
            <div class="form-group">
                {{ form_row(form.ville) }}
            </div>
            <div class="card">
                <div class="card-header">
                    Lieu existant
                </div>
                <div class="card-body">
                    {{ form_widget(form.lieu) }}
                    {{ form_errors(form.lieu) }}
                </div>
            </div>
            <div class="card mt-3">
                <div class="card-header">
                    Nouveau lieu
                </div>
                <div class="card-body py-2">
                    <div class="form-group">
                        {{ form_row(form.nomLieu) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.rue) }}
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-sm">
                            {{ form_row(form.latitude) }}
                        </div>
                        <div class="col-lg-6 col-sm">
                            {{ form_row(form.longitude) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center my-3">
        <a href="{{ path('sortie_index') }}" class="btn btn-secondary">Retour à l'accueil</a>
        <button class="btn btn-warning" name="{{ field_name(form.save) }}">{{ button_label|default('Enregistrer') }}</button>
        {{ form_widget(form.publish) }}
        <form method="post" action="{{ path('sortie_delete', {'id': sortie.id}) }}" onsubmit="return confirm('Etes vous sûr de vouloir supprimer cette sortie ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sortie.id) }}">
            <button class="col-2 btn btn-danger">Supprimer</button>
        </form>
    </div>
{{ form_end(form) }}
