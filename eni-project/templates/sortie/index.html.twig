{% extends 'base.html.twig' %}

{% block title %}Sortie index{% endblock %}

{% block body %}
    <div class="user-info">
        <p>Date du jour : {{ "now"|date("d/m/Y") }}</p>
        <p>Participant : {{ app.user.getIdentite }}</p>
    </div>

    <h3>Filtrer les sorties</h3>

    {{ include('sortie/_filters.html.twig') }}

    <table class="table">
        <thead>
            <tr>
                <th>Nom de la sortie</th>
                <th>Date de la sortie</th>
                <th>Clôture</th>
                <th>Inscrits/Places</th>
                <th>Etat</th>
                <th>Inscrit</th>
                <th>Organisateur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

        {% for sortie in sorties %}
            {% set inscrit = '' %}
            {% for participant in sortie.participant %}
                {% if participant == app.user %}
                        {% set inscrit = 'X' %}
                {% endif %}
            {% endfor %}
            <tr>
                <td>{{ sortie.nom }}</td>
                <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('d/m/Y H:i:s') : '' }}</td>
                <td>{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('d/m/Y') : '' }}</td>
                <td>{{ sortie.participant|length }} / {{ sortie.nbInscriptionsMax }}</td>
                <td>{{ sortie.etat}}</td>
                <td>{{ inscrit }}</td>
                <td>{{ sortie.organisateur }}</td>
                <td>
                    {% if sortie.etat == 'En création' %}
                        {% if sortie.organisateur == app.user %}
                            <a href="{{ path('sortie_edit', {'id': sortie.id}) }}">Modifier</a>
                        {% endif %}
                    {% elseif sortie.etat == 'Ouverte' %}
                        <a href="{{ path('sortie_show', {'id': sortie.id}) }}">Afficher</a>
                        S'inscrire / Se désinscrire
                        {% if inscrit == '' %}
                            <a href="{{ path('sortie_subscribe', {'id': sortie.id}) }}">S'inscrire</a>
                        {% elseif inscrit == 'X' %}
                            <a href="{{ path('sortie_unsubscribe', {'id': sortie.id}) }}">Se désinscrire</a>
                        {% endif %}
                        {% if sortie.organisateur == app.user %}
                            <a href="{{ path('sortie_cancel', {'id': sortie.id}) }}">Annuler</a>
                        {% endif %}
                    {% elseif sortie.etat == 'Cloturée' %}
                        <a href="{{ path('sortie_show', {'id': sortie.id}) }}">Afficher</a>
                        {% if sortie.organisateur == app.user %}
                            <a href="{{ path('sortie_cancel', {'id': sortie.id}) }}">Annuler</a>
                        {% endif %}
                        {% if inscrit == 'X' %}
                            <a href="{{ path('sortie_unsubscribe', {'id': sortie.id}) }}">Se désinscrire</a>
                        {% endif %}
                    {% elseif sortie.etat == 'Annulée' %}
                        <a href="{{ path('sortie_show', {'id': sortie.id}) }}">Afficher</a>
                    {% elseif sortie.etat == 'Terminée' %}
                        <a href="{{ path('sortie_show', {'id': sortie.id}) }}">Afficher</a>
                    {% elseif sortie.etat == 'Historisée' %}
                        <a href="{{ path('sortie_show', {'id': sortie.id}) }}">Afficher</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun résultat ne correspond à votre recherche</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sortie_new') }}">Créer une sortie</a>
{% endblock %}
