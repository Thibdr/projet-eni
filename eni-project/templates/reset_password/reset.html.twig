{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de votre mot de passe{% endblock %}

{% block body %}
    <h1 class="text-center text-primary">Réinitialisation de votre mot de passe</h1>

    <div class="row justify-content-md-center my-5">
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    {{ form_start(resetForm) }}
                    {{ form_row(resetForm.plainPassword) }}

                    <div class="my-2 text-center">
                        <button class="btn btn-primary my-2">Valider</button>
                    </div>
                    {{ form_end(resetForm) }}
                </div>
            </div>

        </div>
    </div>

{% endblock %}

