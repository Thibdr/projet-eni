{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de votre mot de passe{% endblock %}

{% block body %}
    <div class="mx-3 mx-sm-0">
        <h3 class="my-3">Réinitialisation de votre mot de passe</h3>
        <div class="row">
            <div class="my-5 offset-sm-4 col-sm-4">
                <div class="card">
                    <div class="card-body">
                        {{ form_start(resetForm) }}
                            {{ form_row(resetForm.plainPassword) }}

                            <div class="my-2 text-center">
                                <button class="btn btn-warning my-2">Envoyer le mail</button>
                            </div>
                        {{ form_end(resetForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

